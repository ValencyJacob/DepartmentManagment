@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Department>

<br />
<br />
<div class="p-4">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info"> Departments</h2>
        </div>

        <div class="col-3 text-right">
            <a asp-controller="department" asp-action="Upsert" class="btn btn-info form-control"> Add </a>
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card mt-2 mb-2 p-2">
                    <div class="card-header">
                        @item.Name
                    </div>
                    <div class="card-body">
                        Here will Department Description
                    </div>
                    <div class=card-footer>
                        <a class="btn btn-primary text-white" asp-controller="department" asp-action="Upsert" asp-route-Id="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-primary text-white" asp-controller="department" asp-action="Details" asp-route-Id="@item.Id">
                            Details
                        </a>
                        <a class="btn btn-danger text-white" asp-controller="department" asp-action="Delete" asp-route-Id="@item.Id">
                            Delete
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No data exists...</p>
        }
    </div>
</div>

<div class="text-center mt-3 p-2">
    <a class="btn btn-secondary" asp-controller="department" asp-action="index">
        Departments
    </a>
    <a class="btn btn-secondary" asp-controller="division" asp-action="index">
        Divisions
    </a>
    <a class="btn btn-secondary" asp-controller="employee" asp-action="index">
        Employee
    </a>
    <a class="btn btn-secondary" asp-controller="role" asp-action="index">
        Roles
    </a>
</div>
