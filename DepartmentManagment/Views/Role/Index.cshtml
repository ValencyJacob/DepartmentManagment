@model IEnumerable<EmployeeRole>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Должности </h2>
        </div>

        <div class=" col-2 text-right">
            <a asp-action="Upsert" class="btn btn-info form-control"> Add </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Name
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.OrderByDescending(x => x.Id))
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Id">
                                Edit
                            </a>
                            <a class="btn btn-info text-white" asp-action="Details" asp-route-Id="@item.Id">
                                Details
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No publisher exists...</p>
        }
    </div>
</div>

