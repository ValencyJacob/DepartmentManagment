@model EmployeeRole

<div class="container">

    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <h5>
                Employees:
            </h5>
            @for (int i = 0; i < Model.Employee.Count; i++)
            {
                <p>
                    <span class="badge badge-warning">
                        @Model.Employee[i].Name
                    </span>
                </p>
            }
        </div>
    </div>

    <a asp-action="Index" class="btn btn-primary">
        Back
    </a>

</div>