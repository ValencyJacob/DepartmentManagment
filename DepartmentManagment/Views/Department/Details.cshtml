@model Department

<div class="container">

    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>
                    Description
                </p>

                <footer>
                    <h5>
                        Divisions:
                    </h5>               
                    @for (int i = 0; i < Model.Divisions.Count; i++)
                    {
                        <span class="badge badge-warning">
                            @Model.Divisions[i].Name 
                        </span>
                    }
                </footer>

            </blockquote>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-primary">
        Back
    </a>

</div> 